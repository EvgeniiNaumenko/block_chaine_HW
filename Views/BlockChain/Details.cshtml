@model BlockChain_FP_ITStep.Models.Block

@{
    ViewData["Title"] = "Block Details";
}

<style>
    body {
        background-color: #0d1117;
        color: #e6edf3;
        font-family: 'Segoe UI', sans-serif;
    }

    h2, h4 {
        color: #58a6ff;
    }

    .card {
        background-color: #161b22;
        border: 1px solid #30363d;
        border-radius: 12px;
        padding: 20px;
        margin-top: 20px;
        box-shadow: 0 0 8px rgba(88,166,255,0.15);
    }

    .table {
        color: #c9d1d9;
    }

        .table th, .table td {
            vertical-align: middle;
            border-color: #30363d;
        }

        .table thead th {
            background-color: #21262d;
            color: #e6edf3;
        }

    .table-hover tbody tr:hover {
        background-color: #2d333b;
    }

    .table-warning {
        background-color: #5a4e2e !important;
        color: #fff;
    }

    .text-muted {
        color: #8b949e !important;
    }

    .btn-secondary {
        background-color: #30363d;
        border: none;
        color: #e6edf3;
    }

        .btn-secondary:hover {
            background-color: #484f58;
        }
</style>

<div class="card">
    <h2 class="mb-3">Block Details</h2>

    @if (Model == null)
    {
        <div class="alert alert-danger">Block not found.</div>
    }
    else
    {
        <!-- Display block details using DisplayTemplate -->
        @Html.DisplayFor(m => m)

        @if (Model.Transactions != null && Model.Transactions.Count > 0)
        {
            <h4 class="mt-4">Transactions</h4>

            <table class="table table-dark table-hover table-bordered table-sm">
                <thead>
                    <tr>
                        <th>From</th>
                        <th>To</th>
                        <th>Amount</th>
                        <th>Fee</th>
                        <th>Confirmations</th>
                        <th>Note</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tx in Model.Transactions)
                    {
                        bool isCoinbase = tx.FromAddress == "COINBASE";
                        var rowClass = isCoinbase ? "table-warning" : "";

                        int confirmations = ViewBag.LastBlockIndex - Model.Index + 1;
                        confirmations = Math.Min(confirmations, 6); // максимум 6 confirms

                        <tr class="@rowClass">
                            <td>@tx.FromAddress</td>
                            <td>@tx.ToAddress</td>
                            <td class="fw-semibold">@tx.Amount ₿</td>
                            <td>@tx.Fee ₿</td>
                            <td>
                                @if (isCoinbase)
                                {
                                    <span class="text-muted">--</span>
                                }
                                else
                                {
                                    @($"{confirmations}/6")
                                }
                            </td>
                            <td>@tx.Note</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="mt-4 alert alert-info bg-dark border-secondary text-light">
                No transactions in this block
            </div>
        }
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">← Back to list</a>
</div>

@section Scripts {
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text)
                .then(() => console.log("Copied"))
                .catch(err => console.error("Copy failed", err));
        }
    </script>
}
