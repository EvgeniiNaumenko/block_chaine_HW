@model BlockChain_FP_ITStep.Models.Block

<h2>
    Block #@Model.Index — hash:
    <span class="text-muted" style="word-break: break-all;">@Model.Hash</span>
</h2>

<table class="table table-bordered mt-3">
    <thead class="table-light">
        <tr>
            <th>Index</th>
            <th>Prev Hash</th>
            <th>Hash</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Index</td>
            <td>@Model.PrevHash</td>
            <td>@Model.Hash</td>
            <td>@Model.Timestamp</td>
        </tr>
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
