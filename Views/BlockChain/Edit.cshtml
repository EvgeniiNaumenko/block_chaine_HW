@model BlockChain_FP_ITStep.Models.Block

<h2 class="text-light">Edit Block</h2>

<style>
    body {
        background-color: #0d1117;
        color: #e6edf3;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-label {
        color: #c9d1d9;
    }

    .form-control {
        background-color: #21262d;
        border: 1px solid #30363d;
        color: #e6edf3;
    }

        .form-control::placeholder {
            color: #8b949e;
        }

    .btn-primary {
        background-color: #238636;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #2ea043;
        }

    .btn-secondary {
        background-color: #30363d;
        border: none;
        color: #e6edf3;
    }

        .btn-secondary:hover {
            background-color: #484f58;
        }

    .card {
        background-color: #161b22;
        border: 1px solid #30363d;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 0 8px rgba(88,166,255,0.15);
        max-width: 500px;
        margin-top: 20px;
    }
</style>

<div class="card">
    <form asp-action="Edit" method="post">
        <input type="hidden" name="index" value="@Model.Index" />

        <div class="mb-3">
            <label class="form-label">Signature:</label>
            <input type="text" name="signature" class="form-control" value="@Model.Signature" placeholder="Enter signature" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
